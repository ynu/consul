{{range $key, $pairs := tree "nginx" | byKey}}
upstream {{$key}} {
    {{range $key2, $pairs2 := tree (printf "/nginx/%s/servers" $key)}}
    server {{.Value}};
    {{else}}
    server 127.0.0.1:65535;
    {{end}}
}
server {
    server_name {{key (printf "/nginx/%s/domain" $key)}};
    location / {
        proxy_pass http://{{$key}};
        proxy_set_header Host $host;
    }
}
{{end}}